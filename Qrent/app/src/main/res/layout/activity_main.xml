<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7ebed"
    android:backgroundTint="#f7ebed"
    tools:context="qrentmobile.qrent.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#394f4d"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/qLogo"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="0.00"
            android:clickable="true"
            app:srcCompat="@drawable/q1"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="-1dp" />

        <SearchView
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:contentDescription="What are you looking for?"
            android:contextClickable="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

        </SearchView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="#394f4d"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/justPosted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="Berlin Sans FB Regular"
                android:includeFontPadding="true"
                android:text="Just Posted"
                android:textAlignment="center"
                android:textColor="#c33c54"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/onSale"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:fontFamily="Berlin Sans FB Regular"
                android:includeFontPadding="true"
                android:text="On Sale"
                android:textAlignment="center"
                android:textColor="#c33c54"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#ffffff"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="178dp"
                            android:layout_height="167dp"
                            app:srcCompat="@drawable/nikon_1555_d7200_dslr_camera_with_1127272" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nikon D7200"
                                android:textColor="#c33c54"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="P 750 / day"
                                android:textColor="#37888e"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Baguio City"
                                android:textColor="#37888e"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Patrick"
                                android:textColor="#c33c54"
                                android:textSize="25sp" />

                        </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageGopro"
                            android:layout_width="178dp"
                            android:layout_height="167dp"
                            app:srcCompat="@drawable/gopro" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="GoPRO hero 4"
                                android:textColor="#c33c54"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="P 500 / day"
                                android:textColor="#37888e"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Baguio City"
                                android:textColor="#37888e"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Melvin"
                                android:textColor="#c33c54"
                                android:textSize="25sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="178dp"
                            android:layout_height="167dp"
                            app:srcCompat="@drawable/download" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Canon 700D"
                                android:textColor="#c33c54"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="P 600 / day"
                                android:textColor="#37888e"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Baguio City"
                                android:textColor="#37888e"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="David"
                                android:textColor="#c33c54"
                                android:textSize="25sp" />

                        </LinearLayout>
                    </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.widget.RelativeLayout>
